<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/gameNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:text="Name: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameNameLabel"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameNameLabel"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="Status: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameNameText"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameStatusLabel"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameStatusLabel"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="Team1: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameStatusText"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameTeam1Label"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam1Label"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="Team2: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam1Label"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameTeam2Label"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam2Label"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="Team3: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam3Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam2Label"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameTeam3Label"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam4Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam3Label"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="Team4: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam4Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam3Label"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameTeam4Label"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam5Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam4Label"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:text="Team5: "
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gameTeam5Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTeam4Label"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/gameTeam5Label"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="433dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="30dp"
        android:textSize="26sp"
        android:text="Start game" />

    <Button
        android:id="@+id/joinGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="433dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        android:textSize="26sp"
        android:text="join game" />

    <Button
        android:id="@+id/joinGameButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="433dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="30dp"
        android:textSize="26sp"
        android:text="join game" />

    <Button
        android:id="@+id/joinGameButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="3dp"
        android:text="join game"
        android:textSize="26sp"
        android:visibility="invisible" />

</RelativeLayout>
